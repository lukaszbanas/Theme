{# page.html.twig #}

{% extends 'layout.html.twig' %}

{% block article %}

	<article class="site-content">
		{% embed 'components/page-content.html.twig' %}

			{% block page_header %}{% endblock page_header %}

			{% block page_content %}
				{% for post in lastPosts %}
					{% embed 'components/post-content.html.twig' %}
					{% endembed %}
				{% endfor %}
			{% endblock page_content %}

		{% endembed %}
	</article>

{% endblock %}