{# layout.html.twig #}

{% extends 'base.html.twig'  %}

{% block layout %}
    {% block mainNav %}
		<!-- block mainNav-->
		<nav class="main-nav navbar navbar-default navbar-fixed-top">
			<div class="container">
				<div class="navbar-header">
					<a class="navbar-brand" href="{{ Wordpress.getUrl('/') }}">
						<img src="{{ Wordpress.getPath('img') }}logo.png" alt="{{ Wordpress.bloginfo('title') }}" />
					</a>
				</div>
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".main-navigation">
					<span class="sr-only">{{ Wordpress.__('Toggle navigation') }}</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
                {{ Wordpress.wp_nav_menu({'theme_location':'main_menu_1','menu_class' : 'nav-menu', 'echo' : false}) | raw }}

			</div>
		</nav>
		<!-- /block mainNav-->
    {% endblock mainNav %}


	{% block header %}
	{% endblock header %}
	

	{% block content %}
		<!-- block content -->

		<div class="page_background">
            <div class="container">
                <div class="row">

                    {% block asideLeft %}
                        {% if Wordpress.is_active_sidebar('sidebar-1') %}
                            <!-- block asideLeft  -->
                            <div class="col-md-3">
                                {% if Wordpress.is_active_sidebar('sidebar-1') %}
                                    <ul>{{ Wordpress.dynamic_sidebar('sidebar-1') ? '' : '' }}</ul>
                                {% endif %}
                            </div>
                            <!-- /block asideLeft -->
                        {% endif %}
                    {% endblock asideLeft %}

                    {% if Wordpress.is_active_sidebar('sidebar-1') %}
                        {% set mainClass = 9 %}
                    {% else %}
                        {% set mainClass = 12 %}
                    {% endif %}
                    <div id="page" class="col-md-{{ mainClass }}">
                        <!-- block article-->
                        {% block article %}{% endblock article %}
                        <!-- /block article -->
                    </div>
                </div>
            </div>
		</div>
		
		<!-- block asideRight -->
		{% block asideRight %}{% endblock asideRight %}
		<!-- /block asideRight -->

		<!-- /block content -->
	{% endblock content %}


	{% block footer %}
		<!-- block footer -->
		<div class="footer_background">
			<footer class="container">
				<div class="row">
					<div class="site-info col-xs-12 col-md-6 col-md-offset-6">
						{{ Wordpress.__('Copyright by ') }}
					</div>
				</div>
			</footer>
		</div>
		<!-- /block footer -->
	{% endblock footer %}

{% endblock layout %}